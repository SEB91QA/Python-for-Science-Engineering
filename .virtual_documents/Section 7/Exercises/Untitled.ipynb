import numpy as np


def deriv(f, x, h=1.e-9):
    return (f(x + h) - f(x - h)) / (2.0 * h)


def deriv2(f, x, h=1.e-9):
    return (f(x + h) - 2*f(x) + f(x - h)) / (h**2)


def bessel(x, n):
    f = lambda t: np.sin(t)/t  # Importat to keep the variable be callable as a function

    if n == 0:
        return np.where(x == 0.0, 1.0, np.sin(x)/x)

    if n == 1:
        return np.where(x == 0, 0.0, -1*deriv(f, x))

    if n == 2:
        return np.where(x == 0, 0.0, deriv2(f, x))  # This implementation needs correction


for i in range(0, 11):
    print(i, '  ', np.round(bessel(i, 0), decimals=3), '  ',
          np.round(bessel(i, 1), decimals=3), '  ', np.round(bessel(i, 2), decimals=3))


