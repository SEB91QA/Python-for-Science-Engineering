def trapezoid2(f, a, b, tol=1.0e-8, **fparams):
    '''Trapezoid rule 2'''
    h0 = b-a
    A0 = 0.5*(b-a)*(f(a, **fparams) + f(b, **fparams))
    AT = A0

    for n in range(1, 10):
        print(f"Value of n is {n}")
        print(f"Área anterior es {AT}")
        Aa = AT
        AT *= 0.5
        print(f"Área anterior dividida en dos es {AT}\n")
        h0 *= 0.5
        print(f"Nuevo valor de h0 es {h0}")
        s = 0
        print(f"Value of h0 is {h0}")
        for i in range(1, 2**n + 1, 2):
            print(f"Value of i is {i}")
            s += h0*(f(a + i*h0, **fparams))
            #A = 0.5*A0 + h0*0.5*(f(a + h0*0.5, **fparams))
        print(f"Área anterior dividida en dos es {AT}")
        print(f"Sumatoria es {s}")
        AT = AT + s
        Ad = AT
        print(f"Presition is: {np.abs((Ad-Aa)/Ad)}")
        print(f"El área es {AT}\n")

        if np.abs((Ad-Aa)/Ad) < tol:
            break

    return AT


