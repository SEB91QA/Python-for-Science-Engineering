import warnings


def deriv(f, x, h=1.e-9, *params):
    return (f(x + h, *params) - f(x - h, *params)) / (2. * h)


def f0(x):
    return 4 * x**5


def sinc(x):
    warnings.filterwarnings("ignore", category=RuntimeWarning)
    z = np.where(x == 0.0, 1.0, np.sin(x)/x)
    warnings.filterwarnings("always", category=RuntimeWarning)
    return z


deriv(sinc, 2*np.pi)


import numpy as np


def deriv(f, x, h=1.e-9):
    return (f(x + h) - f(x - h)) / (2.0 * h)


def bessel(x, n):
    f = lambda t: sinc(t) # Importat to keep the variable be callable as a function

    if n == 0:
        return np.where(x == 0.0, 1.0, np.sin(x)/x)

    if n == 1:
        return np.where(x == 0, 0.0, -1*deriv(f, x))

for i in range(0, 11):
    print(i, '  ',np.round(bessel(i, 0), decimals=3), '  ', np.round(bessel(i, 1), decimals=3))















