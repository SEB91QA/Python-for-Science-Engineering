def bessel(x, n):
    f = lambda t: np.sin(t)/t  # Importat to keep the variable be callable as a function

    if n == 0:
        return np.where(x == 0.0, 1.0, np.sin(x)/x)

    if n == 1:
        return np.where(x == 0, 0.0, -1*deriv(f, x))

    if n == 2:
