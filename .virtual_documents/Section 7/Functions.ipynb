import numpy as np


def sinc(x):
    y = np.sin(x)/x
    return y


print(sinc(4))
print(sinc(1.2))
print(sinc(0))


def sinc2(x):
    if x == 0:
        y = 1.0
    else:
        y = np.sin(x)/x
    return y


sinc2(0)


sinc(1.2)


def sinc3(x):
    if x == 0:
        return 1.0
    else:
        return np.sin(x)/x


print(sinc3(1.3), sinc3(0))


x = np.linspace(0., 5., 11)
x


